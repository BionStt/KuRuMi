    <style>
        body {     
            padding-top: 50px;
        }

        .item img {
            width: 100%;
        }

        .navbar-inverse input[type="text"] {
            background: #313131;
            border: none;
            color: #999;
        }

        .navbar-inverse .navbar-form {
            position: relative;
        }

        .navbar-inverse button[type="button"] {
            position: absolute;
            top: 30%;
            right: 20px;
            background: none;
            border: none;
        }

        @@media(min-width:768px) {
            .navbar-inverse button[type="submit"] {
                top: 15%;
            }
        }

        .navbar-inverse .glyphicon {
            color: #999;
        }

        .profile {
            margin-right: 25px;
        }

        #copyright {
            background-color: #202020;
            height: 100px;
            color: #524f4f;
            text-align: center;
            font-size: 10px;
            padding-top: 6px;
        }
    </style>
    <script>
        $(function () {
            //注册事件
            $("#regist").click(function () {
                var data = { userName: $("#text_r").val(), email: $("#email_r").val(), passWord: $("#password_r").val() };
                ctrl.ajaxWebApi({
                    type: "post",
                    data: data,
                    url: "Api/User/UserRegist",
                    cache: false,
                    success: function (result)
                    {
                        ctrl.msg(result);
                        setTimeout(window.location.reload(), 2000);
                    }
                });
            });
            //登录事件
            $('#lgbtn').click(function () {
                var data = { email: $('#email').val(), password: $('#password').val() };
                ctrl.ajaxController({
                    type: "post",
                    data: data,
                    url: "/Shared/LoginView",
                    cache: false,
                    success: function (result) {
                        if (result.info == "登录成功！") {
                            localStorage.setItem("userinfo", result.Id);
                            ctrl.confirm('<span class="text- success">' + result.info + '</span>', callBack());
                        } else {
                            ctrl.msg(result.info);
                        }
                    }
                });
            });
        });
        function callBack() {
            
        }
    </script>
    @RenderSection("script", false)
    @RenderSection("css", false)
</head>
<body>
    <!--------------------------------- 导航开始 ------------------------------------->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!-- 导航头 -->
